{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2017",
        "typeRoots": ["node_modules/@types", "node_modules/@types/node"],
        "lib": ["es2018"],
        "allowJs": true,
    },
    "include": ["./src"]
}
